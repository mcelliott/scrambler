%h2.heading.text-center Expenses - #{event.name} - #{event.event_date}
.large-12.columns
  .row
    .panel{ style: 'padding-bottom: 0;' }
      .row.collapse
        %ul.actions-list
          %li= go_to_event_link(event)
          %li= edit_event_link(event)

  .row
    %table.index
      %tbody
        %tr
          %th Number of Rounds
          %td= @expenses_decorator.num_rounds
        %tr
          %th Number of Participants
          %td= @expenses_decorator.number_of_participants
        %tr
          %th Cost Per Participant
          %td= money(@expenses_decorator.participant_cost)
        %tr
          %th Rate per minute
          %td= money(@expenses_decorator.rate_per_minute)
        %tr
          %th Total Time Flown (minutes)
          %td= "#{@expenses_decorator.minutes_flown}"
        %tr
          %th Gross Sales
          %td= money(@expenses_decorator.gross_sales)
        %tr
          %th Cost of Goods Sold
          %td= money(@expenses_decorator.cost_of_goods_sold)
        %tr
          %th Gross Profit
          %td= money(@expenses_decorator.gross_profit)
        %tr
          %th Gross Profit Percentage
          %td= "#{number_with_precision(@expenses_decorator.gross_profit_percentage, precision: 2)}%"

.div#page-refresh
