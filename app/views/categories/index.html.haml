= link_to fa_icon('plus', text: 'New category'), new_category_path, class: 'button-xs pull-right', remote: true
%h2.text-center Categories

.row
  .large-10.columns.small-centered
    - if @categories.present?
      %table.index.responsive
        %thead
          %tr
            %th Name
            %th
            %th
        %tbody#categories
          - @categories.each do |category|
            %tr{ id: "category-#{category.id}" }
              = render category
      #pages= paginate @categories
    - else
      .empty-list.text-center= fa_icon('frown-o', text: 'No categories')
