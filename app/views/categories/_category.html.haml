%td= category.name
%td
  %button.button-xs.dropdown{ href: '#', data: { dropdown: "category-drop-#{category.id}" }, aria: { controls: "category-drop-#{category.id}", expanded: 'false' } } Actions
  %ul.f-dropdown{ id: "category-drop-#{category.id}", data: { 'dropdown-content' => true }, aria: { hidden: true }, tabindex: '-1' }
    %li= link_to 'Edit', edit_category_path(category), class: 'icon', remote: true
    %li= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }
