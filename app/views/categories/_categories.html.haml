%table
  %thead
    %tr
      %th Name
      %th Type
      %th Enabled
      %th
  %tbody#categories
    - unless categories.present?
      %tr.empty-list
        %td.text-center{ colspan: 4 }
          .empty-list-panel= fa_icon('frown-o', text: 'No Categories')
    - categories.each do |category|
      %tr{ id: "category-#{category.id}" }
        = render category

%div#pages= paginate categories
