<% unless category.errors.present? %>
  $('#modal').foundation('reveal', 'close');
  $('.empty-list').addClass('hidden')
  $('tbody#categories').prepend('<tr id="category-<%= category.id %>"><%= j(render category) %></tr>');
  ReactRailsUJS.mountComponents();
  flash_row('tr#category-<%= category.id %>');
<% else %>
  $('.modal-content').html('<%= j(render template: 'categories/new.html.haml') %>');
  $('#modal').foundation('reveal', 'open');
<% end %>
