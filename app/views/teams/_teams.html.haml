%table
  %thead
    %tr
      %th #
      %th Name
      %th.text-center Score
      %th.text-center Total
      %th
  %tbody
    - teams.each do |team|
      - team.team_participants.each do |tp|
        %tr
          %td.large-1.medium-1.small-1= "#{tp.participant_number}. "
          %td.large-5.medium-5.small-3
            - if tp.placeholder
              %span{ data: { tooltip: true }, aria: { haspopup: true }, class: 'has-tip', title: placeholder_text }
                = fa_icon('exclamation-triangle', text: tp.participant_name)
            - else
              = tp.participant_name
          %td.large-2.medium-2.small-3.text-center
            - if tp.placeholder
              Not Scored
            - elsif can?(:update, event)
              = form_for tp.event_score, url: event_score_path(tp), remote: true, class: 'score-form' do |f|
                = f.text_field :score, value: tp.event_score.score, class: "event-score round-score-#{tp.id} text-center"
                = f.hidden_field :event_id, value: team.event.id
                = f.hidden_field :round_id, value: team.round.id
                = f.hidden_field :team_participant_id, value: tp.id
            - else
              = tp.event_score.score
          %td.large-2.medium-2.small-2.text-center
            %span{ class: "event-total event-total-#{tp.participant_id}" }
              = tp.event_total
          %td.large-3.medium-3.small-4
            - if can?(:update, event)
              .right= react_component('GetButton', path: new_event_email_path(event_id: tp.event.id, participant_id: tp.participant_id), icon: "send")
            .right= react_component('GetButton', path: event_participant_path(event_id: tp.event.id, id: tp.participant_id), icon: "info")
