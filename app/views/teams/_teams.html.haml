- teams.each do |team|
  .large-3.columns.team-section
    %h4.text-center
      = "#{team.name} - #{category_name}"
  .large-9.columns.team-section
    - team.team_participants.each_with_index do |p, index|
      .row.list-item
        .large-12.columns
          .large-1.columns
            = p.participant.number
          .large-3.columns
            - if p.placeholder
              = fa_icon('exclamation-triangle', text: p.participant.flyer.name)
            - else
              = p.participant.flyer.name
          .large-3.columns= "#{p.participant.flyer.hours.ceil} hrs"
          .large-4.columns= p.participant.category.name
