%h2.heading.text-center= event.title

.large-12.columns
  - if can?(:update, event)
    .large-12.columns
      .panel{ style: 'padding-bottom: 0;' }
        .row.collapse
          %ul.actions-list
            %li= send_link(event)
            %li= go_to_event_link(event)

  .large-12.medium-12.small-12.columns.vertical-tab-container
    .large-2.medium-2.small-12.columns.event-content
      %ul.tabs.vertical{ data: { tab: true, options: 'deep_linking:true' }, role: 'tablist' }
        - event.rounds.each_with_index do |r, index|
          = active_tab(index) do
            %a{ href: "#panel-#{r.round_number}", role: 'tab', tabindex: '0', aria: { selected: 'true' }, controls: "panel-#{r.round_number}" }= "Round #{r.round_number}"
        %li
          = active_tab(event.rounds.size + 1) do
            %a{ href: "#panel-leader-board", role: 'tab', tabindex: '0', aria: { selected: 'true' }, controls: "panel-leader-board" } Leader Board
    .large-10.medium-10.small-12.columns.event-content
      .tabs-content
        - event.rounds.each_with_index do |round, i|
          = active_content(i, "panel-#{round.round_number}") do
            - teams_by_category = event.teams_by_category(round)
            - unless teams_by_category.present?
              #empty-teams-list.text-center
                .empty-list-panel= fa_icon('frown-o', text: "No Teams for Round #{round.round_number}")

            - teams_by_category.each_with_index do |(category_name, teams), index|
              = team_category(index) do
                = render partial: 'teams/teams', locals: { teams: teams, category_name: category_name }
        = active_content(event.rounds.size + 1, "panel-leader-board") do
          .large-12.small-12.columns.small-centered
            %table.index.responsive
              %thead
                %tr
                  %th Name
                  %th Score
                  %th Handicap
                  %th Total
              %tbody#leader-board
                - @leader_board.each do |lb_participant|
                  %tr
                    %td= lb_participant.name
                    %td= lb_participant.score
                    %td= lb_participant.handicap
                    %td= lb_participant.total_score



