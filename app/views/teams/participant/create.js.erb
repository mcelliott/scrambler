<% unless team.errors.present? %>
  $('#modal').foundation('reveal', 'close');
  $('.empty-list').hide();
  $('#team-<%= team.id %> .team-participant-list').append('<%= j(render partial: 'teams/team_participant', locals: { team_participant: team_participant }) %>');
  ReactRailsUJS.mountComponents();
  flash_row('#team-participant-<%= team_participant.id %>');
<% else %>
  $('.modal-content').html('<%= j(render template: 'teams/participant/new.html.haml') %>');
  $('#modal').foundation('reveal', 'open');
<% end %>
