= simple_form_for @form, url: teams_participant_path(team), remote: true do |f|
  = f.error_notification
  .row
    = f.hidden_field :event_id
    = f.hidden_field :team_id
    = f.input :participant_id, as: :select, collection: event.team_participant_collection, label: false, input_html: { class: 'participant-select2' }
    = f.input :placeholder, as: :hidden, input_html: { value: 1 }
  .row
    %button#random-participant.button-xs= fa_icon('random', text: 'Randomize')
    %button.button-xs#scored-button= fa_icon('exclamation-triangle', text: 'Unscored')
    = f.button :submit, 'Add Participant', class: 'button-xs radius'
