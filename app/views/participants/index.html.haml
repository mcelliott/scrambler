%h2 Participants

%table.index
  %tr
    %th Name
    %th Hours
    %th Category
    %th
    %th
    %th

  - @participants.each do |participant|
    %tr
      %td= participant.flyer.name
      %td= participant.hours
      %td= participant.category.name
      %td= link_to 'Show', participant
      %td= link_to 'Edit', edit_participant_path(participant)
      %td= link_to 'Delete', participant, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Participant', new_participant_path
