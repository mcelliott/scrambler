$('.modal-content').html('<%= j(render template: "participants/new.html.haml") %>')
$('#modal').foundation('reveal', 'open')

$("select#participant_flyer_id").select2({
  placeholder: "Select Flyer",
  dropdownAutoWidth: true
});

$("select#participant_category_id").select2({
  placeholder: "Select Category",
  dropdownAutoWidth: true
});

$("#hide-participant").on('click', function(e) {
  e.preventDefault();
  $('#new-participant').hide();
  $('.new-participant-button').show();
});
