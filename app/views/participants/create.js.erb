<% unless participant.errors.present? %>
  var participant_row = $(".row#flyer-<%= participant.flyer.id %>");
  participant_row.find('button').prop("disabled", true);
  participant_row.find('select').prop("disabled", true);
  participant_row.find('i').removeClass('fa-plus').addClass('fa-check')
  $('.empty-list').hide();
  $('#participant-list').html("<%= j(render 'events/participants') %>");
  ReactRailsUJS.mountComponents();
  flash_row('#participant-<%= participant.id %>');
<% end %>

if ($('#flyers .row').length == 0) {
  $('#modal').foundation('reveal', 'close');
}
Scrambler.update_messages("<%= j(render 'layouts/messages') %>");
