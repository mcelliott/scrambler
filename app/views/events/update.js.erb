<% unless @event.errors.present? %>
  $('#modal').foundation('reveal', 'close')
  $('tr#event-<%= @event.id %>').html('<%= j(render @event) %>')
  flash_row('tr#event-<%= @event.id %>');
<% else %>
  $('.modal-content').html('<%= j(render template: "events/new.html.haml") %>')
  $('#modal').foundation('reveal', 'open')
<% end %>
