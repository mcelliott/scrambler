.large-12.medium-12.small-12.columns
  %ul
    - unless event.category_participants.present?
      %li.empty-list
        .empty-list-panel= fa_icon('frown-o', text: 'No Participants')

    - event.category_participants.each do |category, participants|
      %li.participant-category{ id: "category-#{category.id}" }
        .custom-panel
          .panel-header
            = link_to fa_icon('trash', text: ""), event_category_path(event, category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'pull-right delete-button button-xs', remote: true
            = category.display_name
          .panel-content
            - participants.each_with_index do |p, index|
              = render partial: 'participants/participant', locals: { p: p, index: index }
