= link_to fa_icon('plus', text: 'New Event'), new_event_path, class: 'button-xs add-button pull-right', remote: true
%h2.text-center Events
.large-8.small-centered.columns
  - if @events.present?
    %table{ style: 'width: 100%;'}
      %tr
        %th Name
        %th Event date
        %th Location
        %th Team Size
        %th
        %th

      - @events.each do |event|
        %tr
          %td= link_to fa_icon('link', text: event.name, right: true), event
          %td= event.event_date
          %td= event.location
          %td= event.team_size
          %td.text-center= link_to fa_icon('edit', text: ''), edit_event_path(event)
          %td.text-center= link_to fa_icon('remove', text: ''), event, method: :delete, data: { confirm: 'Are you sure?' }
  - else
    .empty-list.text-center= fa_icon('frown-o', text: 'No Events')
