%td= link_to fa_icon('link', text: event.name, right: true), event
%td= event.event_date.strftime('%d %b %Y')
%td= event.category_type_humanize
%td= event.team_size
%td= event.num_rounds
%td.text-right
  .right= react_component('DeleteButton', item: "event-#{event.id}", path: event_path(event))
  .right= react_component('GetButton', path: edit_event_path(event), icon: "pencil")
  - if event.show_score_board?
    .right= react_component('LinkButton', path: team_view_path(event.uuid), icon: "table")
