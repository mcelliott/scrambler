%table.index
  %thead
    %tr
      %th Name
      %th Event date
      %th Type
      %th.hide-for-small-only.text-center Team Size
      %th.hide-for-small-only.text-center Rounds
      %th.hide-for-small-only.text-center Participants
      %th
  %tbody#events
    - unless events.present?
      %tr.empty-list
        %td.text-center{ colspan: 6 }
          .empty-list-panel= fa_icon('frown-o', text: 'No Events')
    - events.each do |event|
      %tr{ id: "event-#{event.id}" }
        = render event

%div#pages= paginate events
