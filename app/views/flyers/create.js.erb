<% unless flyer.errors.present? %>
  $('#modal').foundation('reveal', 'close');
  $('.empty-list').hide()
  $('tbody#flyers').prepend('<tr id="flyer-<%= flyer.id %>"><%= j(render flyer) %></tr>');
  ReactRailsUJS.mountComponents();
  flash_row('tr#flyer-<%= flyer.id %>');
<% else %>
  $('.modal-content').html('<%= j(render template: 'flyers/new.html.haml') %>');
  $('#modal').foundation('reveal', 'open');
<% end %>
