= link_to fa_icon('plus', text: 'New flyer'), new_flyer_path, class: 'button-xs add-button pull-right', remote: true
%h2.text-center Flyers

.large-8.small-centered.columns
  - if @flyers.present?
    %table.index
      %thead
        %tr
          %th Name
          %th Email
          %th Hours
          %th
          %th
      %tbody#flyers
        - @flyers.each do |flyer|
          %tr{ id: "flyer-#{flyer.id}" }
            = render flyer
  - else
    .empty-list.text-center
      = fa_icon('frown-o', text: 'No flyers')
