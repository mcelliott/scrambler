%h3.text-center Forgot your password?
.row
  .large-4.small-6.columns.small-centered.underline
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f|
      = f.input :email, as: :email, autofocus: true, label: false, placeholder: 'Email'
      = f.button :submit, 'Send reset instructions', class: 'button-xs devise-button'
.row
  .large-4.small-6.columns.small-centered.text-center
    = link_to 'Resend instructions', new_confirmation_path(resource_name)

