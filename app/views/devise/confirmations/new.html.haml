.authform
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    %h3 Resend instructions
    = f.error_notification
    = f.full_error :confirmation_token
    .row.collapse
      .small-2.large-2.columns
        %span.prefix
          %i.fa.fa-envelope
      .small-10.large-10.columns
        = f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control'
    .register-bottom
      .row
        = f.button :submit, 'Resend confirmation instructions', class: 'button right tiny radius'
      %span.left.reg-msg
        = link_to 'Sign up', new_registration_path(resource_name), class: 'left'
        %br
        = link_to 'Sign in', new_session_path(resource_name), class: 'left'
