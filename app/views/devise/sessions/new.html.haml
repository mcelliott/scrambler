%h3.text-center Sign in
.row
  .large-4.medium-8.small-10.columns.small-centered.underline
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.input :email, as: :email, autofocus: true, required: true
      = f.input :password, as: :password, required: true
      .custom-checkbox
        = f.check_box :remember_me
        = f.label :remember_me
      = f.button :submit, 'Sign in', class: 'button-xs'

