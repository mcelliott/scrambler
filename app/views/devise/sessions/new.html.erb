<div class="authform">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f| %>
    <h3>Sign in</h3>
    <%= devise_error_messages! %>
    <div class="row collapse">
        <div class="small-2 large-2 columns">
          <span class="prefix"><i class="fa fa-envelope"></i></span>
        </div>
        <div class="small-10 large-10 columns">
          <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control' %>
        </div>
    </div>
    <div class="row collapse">
      <div class="small-2 large-2 columns">
        <span class="prefix"><i class="fa fa-lock"></i></span>
      </div>
      <div class="small-10 large-10 columns">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
      </div>
    </div>

    <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'right' %>
    <div class="input-group">
      <div class="custom-checkbox">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
    </div>
    <div class="register-bottom">
      <%= f.submit 'Sign in', class: 'button right tiny radius' %>
      <span class="left reg-msg">Get started!</span>
      <%= link_to 'Sign up', new_registration_path(resource_name), class: 'left'  %>
    </div>
  <% end %>
</div>
