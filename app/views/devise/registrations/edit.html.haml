%h3.text-center Edit User
.row
  .large-4.small-6.columns.small-centered.underline
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.input :name, autofocus: true
      = f.input :email, as: :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = f.input :password, as: :password
      = f.input :password_confirmation, as: :password
      = f.input :current_password, as: :password, required: true
      = f.button :submit, 'Update', class: 'button-xs'

.row
  .large-4.small-6.columns.small-centered.text-center
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
