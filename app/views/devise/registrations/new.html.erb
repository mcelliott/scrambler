<div class="authform">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
    <h3>Sign up</h3>
    <div class="row collapse">
      <div class="small-12 large-12 columns">
    <%= devise_error_messages! %>
        </div>
      </div>
    <div class="row collapse">
      <div class="small-2 large-2 columns">
        <span class="prefix"><i class="fa fa-user"></i></span>
      </div>
      <div class="small-10 large-10 columns">
        <%= f.text_field :name, placeholder: 'Username', autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-2 large-2 columns">
        <span class="prefix"><i class="fa fa-envelope"></i></span>
      </div>
      <div class="small-10 large-10 columns">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 large-2 columns">
        <span class="prefix"><i class="fa fa-lock"></i></span>
      </div>
      <div class="small-10 large-10 columns">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-2 large-2 columns">
        <span class="prefix"><i class="fa fa-lock"></i></span>
      </div>
      <div class="small-10 large-10 columns">
        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>
      </div>
    </div>

    <div class="register-bottom">
      <span class="left reg-msg">Already on the team?</span>
      <%= link_to 'Sign in', new_session_path(resource_name), class: 'left'  %>
      <%= f.submit 'Sign up', class: 'button right tiny radius' %>
    </div>
  <% end %>
</div>
