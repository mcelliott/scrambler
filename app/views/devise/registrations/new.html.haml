%h3.text-center Sign up
.row
  .large-4.medium-6.small-12.columns.small-centered.underline
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.input :name, required: true
      = f.input :email, as: :email, required: true
      = f.input :password, as: :password, required: true
      = f.input :password_confirmation, as: :password, required: true
      = f.button :submit, 'Sign up', class: 'button-xs devise-button'

.row
  .large-4.medium-6.small-12.columns.small-centered.text-center
    .reg-msg Already on the team? #{ link_to 'Sign in', new_session_path(resource_name) }

