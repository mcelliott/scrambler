<% unless resource.errors.present? %>
$('#modal').foundation('reveal', 'close');
$('.empty-list').addClass('hidden')
$('tbody#users').prepend('<tr id="user-<%= resource.id %>"><%= j(render partial: "users/user", locals: { user: resource }) %></tr>');
flash_row('tr#user-<%= resource.id %>');
<% else %>
$('.modal-content').html('<%= j(render template: "devise/invitations/new.html.haml") %>');
$('#modal').foundation('reveal', 'open');
<% end %>
ReactRailsUJS.mountComponents();
