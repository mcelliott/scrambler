- if user_signed_in?
  %ul
    %li.divider
    %li{ class: active_controller_link('events') }= link_to 'Events', events_path
    %li.divider
    %li{ class: active_controller_link('flyers') }= link_to 'Flyers', flyers_path
    %li.divider
    - if can?(:manage, Category)
      %li{ class: active_controller_link('categories') }= link_to 'Categories', categories_path
      %li.divider
      %li{ class: active_controller_link('tenants') }= link_to 'Tenants', tenants_path
      %li.divider
      %li{ class: active_controller_link('pages') }= link_to 'Pages', pages_path
      %li.divider
    %li{ class: active_controller_link('handicaps') }= link_to 'Scoring', scoring_index_path
    %li.divider
  %ul.right
    %li.name= link_to gravatar_tag(current_user.email, size: 30), edit_user_registration_path
    %li= link_to 'Sign out', destroy_user_session_path, method: 'delete'
- else
  %ul.right
    %li.divider
    %li= link_to 'Sign in', new_user_session_path
    %li.divider
