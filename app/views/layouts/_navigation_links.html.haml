- if user_signed_in?
  %ul
    %li.divider
    %li= link_to 'Events', events_path
    %li.divider
    %li= link_to 'Flyers', flyers_path
    %li.divider
    - if can?(:manage, Category)
      %li= link_to 'Categories', categories_path
      %li.divider
    %li= link_to 'Scoring', handicaps_path
    %li.divider
  %ul.right
    %li.name= link_to gravatar_tag(current_user.email, size: 30), edit_user_registration_path
    %li= link_to 'Sign out', destroy_user_session_path, method: 'delete'
- else
  %ul.right
    %li.divider
    %li= link_to 'Sign in', new_user_session_path
    %li.divider
